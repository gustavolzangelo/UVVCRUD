@model IEnumerable<UVVCRUD.Models.Client>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Clients</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-area="" asp-controller="Client" asp-action="Create" class="btn btn-primary">Create new client</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Registration
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Birth Date
                    </th>
                    <th>
                        CPF
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Job
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.Id</td>
                        <td>@client.Name</td>
                        <td>@client.Surename</td>
                        <td>@client.Email</td>
                        <td>@client.BirthDate.ToString("dd/MM/yyyy")</td>
                        <td>@client.CPF</td>
                        <td>@client.Age</td>
                        <td>@client.Job</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-area="" asp-controller="Client" asp-route-Id="@client.Id" asp-action="Update" class="btn btn-primary mx-1">Update</a>
                                <a asp-area="" asp-controller="Client" asp-route-Id="@client.Id" asp-action="Delete" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No clients created yet</p>
    }
</div>